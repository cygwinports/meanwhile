DESCRIPTION="Lotus SameTime protocol library"
HOMEPAGE="http://meanwhile.sourceforge.net/"
SRC_URI="mirror://sourceforge/${PN}/${P}.tar.gz"

PKG_NAMES="${PN} lib${PN}1"
PKG_HINTS="setup lib"
PKG_CONTENTS[0]='--exclude=*.dll usr/'
PKG_CONTENTS[1]='usr/bin/*.dll'

DIFF_EXCLUDES="${PN}.pc"

CYGCONF_ARGS="--enable-doxygen"

src_install() {
	cd ${B}
	cyginstall

	rename ${PN}-doc ${PN} ${D}/usr/share/doc/${PN}-doc-${PV}
}
